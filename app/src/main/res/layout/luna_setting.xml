<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    >


    // 상단바 3개 아이콘 들어가는 레이아웃
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 상단바 버튼 값의 설정 -->
        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_back"
            android:id="@+id/btn_back"> //메뉴버튼 아이디지정
        </Button>

        <Button
            android:layout_width="120dip"
            android:layout_height="70dip"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/lunalogo2"
            android:id= "@+id/btn_lunalogo2"> //로고버튼 아이디지정
        </Button>


    </LinearLayout>

    // 선을 넣어주는 뷰 입니다.
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dip"
        android:textColor="#540dcb"
        android:textSize="25dp"
        android:fontFamily="@font/thechocobbangr"
        android:textStyle="bold"
        android:id="@+id/Room_info_text"
        android:text="- 환경설정 -"/>

    <View
        android:layout_marginTop="35dip"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="알림"
        android:layout_marginLeft="20dip"
        android:textColor="#540dcb"
        android:textSize="20sp"
        android:fontFamily="@font/thechocobbangr"
        android:textStyle="bold"/>

    // 알림 : 광고수신 부분 레이아웃
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS 광고수신"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:textStyle="bold"/>
        
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:id="@+id/switch_SMS_adver"
            android:checked="true"
            android:thumbTint="#540dcb"
            />

    </LinearLayout>
// 알림 : 예약수신
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS 예약정보수신"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:textStyle="bold"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="187dp"
            android:id="@+id/switch_SMS_reser"
            android:thumbTint="#540dcb"
            />

    </LinearLayout>
// 구분선
    <View
        android:layout_marginTop="70dip"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:textColor="#540dcb"
        android:textSize="20sp"
        android:fontFamily="@font/thechocobbangr"
        android:textStyle="bold"/>

    // 기다 : 권한설정
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권한 설정"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:textStyle="bold"/>

        // 권한 설정 버튼인데 영어로 넣으면 오류나서 한글로쳤어요
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:textColor="#540dcb"
           android:text=">"
            android:textSize="30sp"
            android:layout_marginLeft="250dp"
            android:thumbTint="#540dcb"
            android:id="@+id/btn_rnjsgks"
            />

    </LinearLayout>
// 기타 : 케시삭제
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="캐시 삭제"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:textStyle="bold"/>

        // 권한 설정 버튼인데 영어로 넣으면 오류나서 한글로쳤어요
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_noneborder"
            android:textColor="#540dcb"
            android:fontFamily="@font/thechocobbangr"
            android:text="삭제"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="10dp"
            android:thumbTint="#540dcb"
            android:id="@+id/btn_cash_remove"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="회원 탈퇴"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:textStyle="bold"/>

        // 권한 설정 버튼인데 영어로 넣으면 오류나서 한글로쳤어요
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_noneborder"
            android:textColor="#540dcb"
            android:fontFamily="@font/thechocobbangr"
            android:text="탈퇴"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="253dp"
            android:thumbTint="#540dcb"
            android:id="@+id/btn_member_remove"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버전 정보"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/thechocobbangr"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        // 권한 설정 버튼인데 영어로 넣으면 오류나서 한글로쳤어요
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#540dcb"
            android:fontFamily="@font/thechocobbangr"
            android:layout_marginTop="10dp"
            android:text="버전 V 1.0.0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="225dp"

            />


    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="bottom">

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/bottom_button"
           android:layout_gravity="bottom"
           android:text="적용"
           android:textColor="#ffffff"
           android:fontFamily="@font/thechocobbangr"
           android:textSize="30sp"
           android:textStyle="bold"
           android:id="@+id/btn_apply"
           />

   </LinearLayout>








</LinearLayout>