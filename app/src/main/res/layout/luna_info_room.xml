<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f7f7f7">

    // 상단바 3개 아이콘 들어가는 레이아웃
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 상단바 버튼 값의 설정 -->
        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/menu2"
            android:id="@+id/btn_menu2"> //메뉴버튼 아이디지정
        </Button>

        <Button
            android:layout_width="120dip"
            android:layout_height="70dip"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/lunalogo2"
            android:id= "@+id/btn_lunalogo2"> //로고버튼 아이디지정
        </Button>

        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="90dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/setting2"
            android:id="@+id/btn_setting2"
            android:visibility="invisible"> //로고버튼 아이디지정
        </Button>
    </LinearLayout>

    // 선을 넣어주는 뷰 입니다.
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />

    // 스크롤 시작하는 레이아웃
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dip"
                android:textColor="#540dcb"
                android:textSize="25dp"
                android:fontFamily="@font/thechocobbangr"
                android:textStyle="bold"
                android:text="- 객실안내 -"/>


            //Premium Room 텍스트문구

            <TextView
                android:layout_width="170dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="- Premium Room - "
                android:textColor="#000000"
                android:fontFamily="@font/thechocobbangr"
                android:textStyle="bold"
                android:textSize="20dp"/>
            //Luxury Room 이미지삽입
            <ImageView
                android:layout_width="330dip"
                android:layout_height="230dip"
                android:layout_marginLeft="45dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/luxuryroom"/>
            // 설명 이미지로 대체
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/relu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="5dip"
                android:textSize="20dip"
                android:text="300.000 원~ | 1박"
                android:fontFamily="@font/thechocobbangr"
                android:textStyle="bold"
                android:textColor="#000000"/>



            //Classic Room 텍스트문구
            <TextView
                android:layout_width="170dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:layout_marginTop="80dip"
                android:text="- Classic Room - "
                android:textColor="#000000"
                android:fontFamily="@font/thechocobbangr"
                android:textStyle="bold"
                android:textSize="20dp"/>
            //Classic Room 이미지 삽입
            <ImageView
                android:layout_width="330dip"
                android:layout_height="230dip"
                android:layout_marginLeft="45dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/singleroom"/>
            // 설명 이미지로 대체

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/resi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="5dip"
                android:textSize="20dip"
                android:text="150.000 원~ | 1박"
                android:fontFamily="@font/thechocobbangr"
                android:textStyle="bold"
                android:textColor="#000000"/>



        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_button"
        android:text="예약하기"
        android:textColor="#ffffff"
        android:fontFamily="@font/thechocobbangr"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dip"
        android:id="@+id/btn_res">//예약하기버튼
    </Button>
</LinearLayout>
